{
    "appName"                  :     "app",

    "defaultPort"              :     8888,

    "targetDir": {
        "tempTargetDir"        :     "build/.tmp",
        "debugTargetDir"       :     "build/debug",
        "releaseTargetDir"     :     "build/release"
    },

    "folders": {
        "app"                  :     "app",
        "sources"              :     "app/src",
        "styles"               :     "app/styles",
        "fonts"                :     "app/fonts",
        "icons"                :     "app/icons",
        "images"               :     "app/images",
        "favicons"             :     "app/favicons",

        "config"               :     "config",
        "locales"              :     "config/locales",
        "environments"         :     "config/environments"
    },

    "files": {
        "js"                   :     "app/src/app.js",
        "scss"                 :     "app/styles/app.scss",
        "index"                :     "app/index.html"
    },

    "patterns": {
        "js"                   :     "app/src/**/*.js",
        "templates"            :     "app/src/**/*.html",
        "images"               :     "app/images/**/*.*",
        "favicons"             :     "app/favicons/*.*",
        "styles"               :     "app/styles/**/*.scss",
        "fonts"                :     "app/fonts/*.*",
        "icons"                :     "app/icons/**/*.*",
        "iconFonts"            :     "app/icon-fonts/*.svg",

        "config"               :     "config/*.json",
        "environmentsConfig"   :     "config/environments/*.json",
        
        "locales"              :     "config/locales/**/*.json",
        "localeReplace"        :     "config/locales/{{locale}}/*.json"
    },

    "configFiles": {
        "vendor"               :     "vendor.json",
        "package"              :     "package.json",
        "bower"                :     "bower.json",

        "favicons": {
            "generate"         :     "config/favicons/generate.config.json",
            "build"            :     "config/favicons/build.config.json"
        }
    },

    "resources": {
        "favicon"              :     "resources/favicon.svg"
    },

    "test": {
        "configFiles": {
            "karmaConfigFile"          :     "unit-tests.karma.conf.js",
            "protractorConfigFile"     :     "e2e-tests/protractor.conf.js"
        }
    }
}